modules = ["bash", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = [
    "cairo",
    "ffmpeg-full",
    "freetype",
    "ghostscript",
    "gobject-introspection",
    "gtk3",
    "imagemagick",
    "pdftk",
    "pkg-config",
    "poppler",
    "poppler_utils",
    "qhull",
    "tcl",
    "texliveFull",
    "tk",
]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "visualization_server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_compilation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "simple_test_compilation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "symbol_test"

[[workflows.workflow]]
name = "visualization_server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd assets/web && python -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "test_compilation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pdflatex tests/test_compiling.tex"

[[workflows.workflow]]
name = "simple_test_compilation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pdflatex tests/simple_test.tex"

[[workflows.workflow]]
name = "elder_symbol_compilation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pdflatex tests/test_elder_symbol.tex"

[[workflows.workflow]]
name = "test_issue_compilation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pdflatex tests/test_issue.tex"

[[workflows.workflow]]
name = "symbol_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pdflatex test_elder_symbol.tex"

[deployment]
run = ["sh", "-c", "pdflatex -interaction=nonstopmode main.tex"]

[[ports]]
localPort = 5000
externalPort = 80
