modules = ["bash", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["texliveFull", "poppler", "imagemagick", "pdftk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "visualization_server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_compilation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "simple_test_compilation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "latex_compilation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "symbol_test"

[[workflows.workflow]]
name = "visualization_server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd assets/web && python -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "test_compilation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pdflatex test_compiling.tex"

[[workflows.workflow]]
name = "simple_test_compilation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pdflatex simple_test.tex"

[[workflows.workflow]]
name = "latex_compilation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p build/pdf && pdflatex -interaction=nonstopmode -output-directory=build/pdf main.tex && biber --output-directory build/pdf main && makeindex build/pdf/main.idx || true && pdflatex -interaction=nonstopmode -output-directory=build/pdf main.tex && pdflatex -interaction=nonstopmode -output-directory=build/pdf main.tex && cp build/pdf/main.pdf build/pdf/elder_arcane_realization.pdf"

[[workflows.workflow]]
name = "symbol_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pdflatex test_elder_symbol.tex"

[deployment]
run = ["sh", "-c", "pdflatex -interaction=nonstopmode main.tex"]

[[ports]]
localPort = 5000
externalPort = 80
