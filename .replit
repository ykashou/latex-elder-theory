modules = ["bash"]

[nix]
channel = "stable-24_05"
packages = ["texliveFull"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "latex_compilation"

[[workflows.workflow]]
name = "latex_compilation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p output && pdflatex -interaction=nonstopmode -output-directory=output main.tex && biber --output-directory output main && pdflatex -interaction=nonstopmode -output-directory=output main.tex && pdflatex -interaction=nonstopmode -output-directory=output main.tex"

[deployment]
run = ["sh", "-c", "pdflatex -interaction=nonstopmode main.tex"]
